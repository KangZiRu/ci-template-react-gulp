@import 'global/variables'


header
  background mat-blue-500
  height 50px
  color #444
  position fixed
  box-shadow 0 2px 4px 1px rgba(0, 0, 0, .4)
  width 100vw
  box-sizing border-box
  top 0
  display flex
  align-items center
  padding 0 20px
  color white
  z-index 20
  >
    #main-logo
      font-size 28px
      font-weight 600

    #main-nav
      margin-left 20px
      padding 0 20px
      > li
        padding 0 20px
    #profile-nav
      margin-left auto
      > li
        padding 0 20px
