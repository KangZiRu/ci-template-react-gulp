{
    "globals": {
        "base": true,
        "anderlyne": true,
        "pubSub": true,
        "ReactDOM": true,
        "React": true,
        "employee": true
    },
    "extends": ["eslint:recommended", "plugin:react/recommended"],
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "script",
        "ecmaFeatures": {
            "impliedStrict": true,
            "jsx": true
        }
    },
    "env": {
        "browser": true,
        "jquery": true
    },
    "plugins": ["react"],
    "rules": {
        "semi": ["error", "always"],
        "no-unused-vars": "off",
        "react/prefer-es6-class": ["error", "always"],
        "react/prop-types": ["off"],
        "react/jsx-uses-vars": ["error"],
        "react/jsx-pascal-case": ["warn"],
        "react/jsx-key": ["off"]
    }
}
